<body>




    <%- include( 'partials/navBar' ) %>

        <!-- latest news section -->
        <section>
            <div class="wrapper" id="actvt">
                <div class="category-filter">
                    <div class="container">
                        <div class="title">
                            <h1>مجموعات متحفية</h1>
                        </div>

                        <div class="filter-btns">
                            <button type="button" class="filter-btn" id="all">الكل</button>
                            <% if(category != '') { %> 
                                <% category.CategoriesData.forEach(function(category, index) { %> 
                            <button type="button" class="filter-btn" id="<%- category.name %>"><%- category.name %></button>
                            <% }) %>     
                            <% } %> 
                        </div>
                        <div class="filter-items">
                            <% if(artisan != '') { %> 
                                <% artisan.artisanData.forEach(function(artisan, index) { %> 

                            <div class="filter-item all <%- artisan.Category %>">
                                <div class="item-img">
                                    <img src="<%- artisan.img %>" alt="Item image">
                                    <span class="discount"> %  <%- artisan.Safety %> السلامة</span>
                                </div>
                                <div class="item-info">
                                    <p> <%- artisan.name %> </p>
                                    <div>
                                        <span class="old-price">                                                 
                                            <%- artisan.Discreption %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <% }) %>     
                            <% } %> 
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- end of latest news section -->

        <%- include( 'partials/footer' ) %>

</body>
<script src="js/script.js"></script>
</html>